<h1>Similar Director Movies</h1>
<table id="movies">
  <thead>
    <tr>
      <th class="<%= @title_header %>">
        <%= link_to 'Movie Title', movies_path(:sort => 'title', :ratings => @selected_ratings), :id => 'title_header' %>
      </th>
      <th>Director</th>
      <th>Rating</th>
      <th class="<%= @date_header %>">
        <%= link_to 'Release Date', movies_path(:sort => 'release_date', :ratings => @selected_ratings), :id => 'release_date_header' %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @similar_list.each do |movie| %>
      <tr>
        <td>
          <%= movie.title  %>
        </td>
        <td>
          <%= movie.director %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path %>
